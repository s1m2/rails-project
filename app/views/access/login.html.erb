<%@formtitle = "LOGIN" %>
<div id = "index">
  <%= form_tag(:action =>'attempt_login') do %>
     <div class="group">
     	 <%= text_field_tag(:username) %>
     	 <span class="highlight"></span>
	     <span class="bar"></span>
	     <%= label_tag(:username)%>
     </div>

     <div class="group">
     	 <%= password_field_tag(:password) %>
     	 <span class="highlight"></span>
	     <span class="bar"></span>
	     <%= label_tag(:password) %>
     </div>
     
     <div class="button buttonBlue">
		 <%= submit_tag("Login",:class=>'button') %>
	 </div>
        
   <% end %>
</div>
<div id="signuplink">
   <%= link_to("Forgot Password ?",:controller =>'access/forgot') %> 
</div>
